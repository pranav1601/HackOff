<%include ../partials/header %>


<div class="container">

   <h1 style="text-align:center;">Edit <%= post.name%></h1>
   
       <div class="row">
           <div style="width:30% ; margin : 25px auto ;">
            <form action="/posts/<%= post._id %>?_method=PUT" method=POST>
                   <div class="form-group">
                       <label for="name">Name</label>
                       <input class="form-control" type="text" name="post[name]" value="<%= post.name%>">
                   </div>
                   <div class="form-group">
                       <label for="image">Image</label>
                       <input class="form-control" type="text" name="post[image]" value="<%= post.image%>">
                   </div>
                   <div class="form-group">
                        <label for="description">Description</label>
                        <input class="form-control" type="text" name="post[description]" value="<%= post.description%>">
                   </div>
                   <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block " >Submit</button>
                   </div>
                  
               </form>
               <a href="/posts" class="btn btn-default">Go Back</a>
           </div>
       </div>
   </div>


<%include ../partials/footer %>